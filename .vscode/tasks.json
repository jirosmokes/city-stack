{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/MinGW/bin/g++.exe",  //specify path to compiler
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-IC:/MinGW/freeglut/include",        // Include directory for headers
                "-LC:/MinGW/freeglut/lib",            // Library directory
                "-IC:/MinGW/glew-2.1.0/include",
                "-LC:/MinGW/glew-2.1.0/lib/Release/Win32",
                "-lglew32",                        // Link to GLEW
                "-lopengl32",                        // Link to OpenGL
                "-lglu32",                           // Link to GLU
                "-lfreeglut"                        // Link to FreeGLUT library
            ],
            "options": {
                "cwd": "${fileDirname}"             
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
